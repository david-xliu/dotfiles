{
    "workbench.colorTheme": "One Dark Pro",
    "atomKeymap.promptV3Features": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.formatOnPaste": true,
    "editor.fontFamily": "Roboto Mono for Powerline",
    "workbench.iconTheme": "file-icons-mac",
    "editor.accessibilitySupport": "off",
    "workbench.startupEditor": "none",
    "workbench.activityBar.visible": true,
    "workbench.statusBar.visible": true,
    "editor.fontSize": 14,

    // MacOS Modern Tweaks
    "window.titleBarStyle": "native",
    "window.nativeTabs": true,
    "window.zoomLevel": 0,
    "editor.tabSize": 2,
    "editor.fontWeight": "normal",

    // integrated terminal settings

    // One Dark Pro theme customization and terminal
    "workbench.colorCustomizations": {
        "terminal.ansiBlack": "#1E2123",
        "terminal.ansiRed": "#D2E1E5",
        "terminal.ansiGreen": "#98C28C",
        "terminal.ansiYellow": "#d7b3cf",
        "terminal.ansiBlue": "#91B5B9",
        "terminal.ansiMagenta": "#B58695",
        "terminal.ansiCyan": "#92B39A",
        "terminal.ansiWhite": "#d1d8d8",
        "terminal.ansiBrightBlack": "#425059",
        "terminal.ansiBrightRed": "#D8682B",
        "terminal.ansiBrightGreen": "#00D900",
        "terminal.ansiBrightYellow": "#CBA16A",
        "terminal.ansiBrightBlue": "#9C8D7E",
        "terminal.ansiBrightMagenta": "#A0C6DF",
        "terminal.ansiBrightCyan": "#95b7cd",
        "terminal.ansiBrightWhite": "#B7B3B5",

        "[One Dark Pro]": {
            "activityBar.background": "#d2d8da",
            "activityBar.foreground": "#33404a",
            // "activityBar.border": "#cfd3d4",
            "activityBarBadge.background": "#ad85b0",
            "activityBarBadge.foreground": "#f8fafd",
        }
    },
    "explorer.confirmDelete": false,
    "git.enableSmartCommit": true,
    "explorer.confirmDragAndDrop": false,
    "latex-workshop.view.pdf.viewer": "tab",
    "editor.minimap.enabled": false,
    "latex-workshop.intellisense.package.enabled": true,
    "latex-workshop.intellisense.unimathsymbols.enabled": true,
    "latex-workshop.view.pdf.hand": true,
    "latex-workshop.bind.enter.key": false,
}

